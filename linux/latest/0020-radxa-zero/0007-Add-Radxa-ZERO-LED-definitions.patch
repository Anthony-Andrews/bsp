Date: Tue, 18 Apr 2023 17:11:27 +0800
Subject: [PATCH] Add Radxa ZERO LED definitions

---
 .../boot/dts/amlogic/meson-g12a-radxa-zero.dts   | 16 ++++++++++++++++
 1 file changed, 16 insertions(+)

diff --git a/arch/arm64/boot/dts/amlogic/meson-g12a-radxa-zero.dts b/arch/arm64/boot/dts/amlogic/meson-g12a-radxa-zero.dts
index 234fc81ef3e6..51136681b1ca 100644
--- a/arch/arm64/boot/dts/amlogic/meson-g12a-radxa-zero.dts
+++ b/arch/arm64/boot/dts/amlogic/meson-g12a-radxa-zero.dts
@@ -38,6 +38,22 @@ memory@0 {
 		reg = <0x0 0x0 0x0 0x40000000>;
 	};
 
+	leds {
+		compatible = "gpio-leds";
+
+		led_status: led-status {
+			label = "n2:blue";
+			gpios = <&gpio_ao GPIOAO_10 GPIO_ACTIVE_HIGH>;
+			linux,default-trigger = "heartbeat";
+		};
+
+		led_status-151: led-status-151 {
+			label = "n2:blue";
+			gpios = <&gpio_ao GPIOAO_8 GPIO_ACTIVE_HIGH>;
+			linux,default-trigger = "heartbeat";
+		};
+	};
+
 	cvbs-connector {
 		status = "disabled";
 		compatible = "composite-video-connector";
